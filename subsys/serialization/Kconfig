menu "Serialization"

if RP_SERIALIZATION

config RP_OS_RSP_WAIT_TIME
	int "Remote procedure response wait time"
	default 1500
	help
	  Remote procedure wait for response maximum time in miliseconds

choice
	prompt "RPMSG device role"
	default RPMSG_REMOTE

config RPMSG_REMOTE
	bool "Remote"

config RPMSG_MASTER
	bool "Master"

endchoice

endif # RP_SERIALIZATION

endmenu
